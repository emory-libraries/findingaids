<config>

 <!-- input file locations -->
 <input>
   <!-- path must be absolute or relative to build directory -->
   <file>ilnv40.xml</file>
   <volume>40</volume>
 </input>

<!-- cvs named tag for xml files generated by this build -->
 <cvs>
  <!-- user id on chaucer (for cvs) -->
  <user>rsutton</user>
   <!-- chaucer cvs is segmented here to construct cvsroot with user id  -->
   <cvsroot>
       <type>pserver</type>
       <host>chaucer.library.emory.edu</host>
       <path>/usr/local/cvsrep</path>
       <frameworkCommon>:ext:rsutton@cvs.library.emory.edu:/home/cvsroot</frameworkCommon>
    </cvsroot>
   <password><frameworkCommon>hoosiers</frameworkCommon></password>
   <tag>build1</tag>
 </cvs>

<!-- info necessary for loading & deleting data in tamino -->
 <tamino>
   <server>vip.library.emory.edu</server>
   <database>ILN</database>
   <collection>iln</collection>
   <rootElement>TEI.2</rootElement>
 </tamino>

 <!-- name of dtd to use -->
 <dtd>iln.dtd</dtd>

<!-- directories used in build process -->
  <!-- note: all directories are relative to build basedir -->
  <dir><xml>xml<data>xml/data</data>
	       <entities>xml/entities</entities>
	       <figureEntities>xml/figure_entities</figureEntities>
	       <imgsize>xml/imgsize</imgsize>
	       <divsize>xml/divsize</divsize>
	       <doctype>xml/doctype</doctype>
	       <tamino>xml/tamino</tamino>
       </xml>
<!-- note: 'co' version of is shorthand used for cvs checkout command -->
       <cvs>cvs<dataPrep>cvs/dataPrep<co>dataPrep</co></dataPrep>
	       <iln>cvs/iln<co>iln</co><dtd>cvs/iln-dtd<co>iln-dtd</co></dtd></iln>
       </cvs>
  </dir>
</config>

